@model DomainLayer.Models.ReceivingReport
<link href="~/css/inspectorSideNav.css" rel="stylesheet" asp-append-version="true" />
@{
    ViewData["Title"] = "Delete";
}
<section id="content">


    <!-- MAIN STARTS-->
    <main>

        <div class="FirstLayer">

            <div class="applications">
                <div>
                    <h3>Are you sure you want to delete this Receiving Report?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Date & Time:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RecTime)
                        </dd>
                        <dt class="col-sm-2">
                            Batch Code:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.BatchCode)
                        </dd>
                        <dt class="col-sm-2">
                            Specie:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Species)
                        </dd>
                        <dt class="col-sm-2">
                            Category:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Category)
                        </dd>
                        <dt class="col-sm-2">
                            No. Of Heads:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NoOfHeads)
                        </dd>
                        <dt class="col-sm-2">
                            Live Weight:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.LiveWeight)
                        </dd>
                        <dt class="col-sm-2">
                            Meat Dealer:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.MeatDealers.FirstName)
                            @Html.DisplayFor(model => model.MeatDealers.LastName)
                        </dd>
                        <dt class="col-sm-2">
                            Origin:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Origin)
                        </dd>
                        <dt class="col-sm-2">
                            Shipping Documents:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ShippingDoc)
                        </dd>
                        <dt class="col-sm-2">
                            Holding Pen No.:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.HoldingPenNo)
                        </dd>
                        <dt class="col-sm-2">
                            Received By:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ReceivingBy)
                        </dd>
                        <dt class="col-sm-2">
                            Status:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.InspectionStatus)
                        </dd>
                        @* <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.AccountDetails)
                        </dt>
                        <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.AccountDetails.Id)
                        </dd>*@
                    </dl>

                    <form asp-action="Delete" id="deleteForm">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </form>

                    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                    <script>
                        document.getElementById('deleteForm').addEventListener('submit', function (e) {
                            e.preventDefault();

                            Swal.fire({
                                title: 'Are you sure?',
                                text: "You won't be able to revert this!",
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#d33',
                                cancelButtonColor: '#3085d6',
                                confirmButtonText: 'Yes, delete it!',
                                cancelButtonText: 'Cancel'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    // Proceed with form submission
                                    document.getElementById('deleteForm').submit();
                                }
                            });
                        });
                    </script>
                </div>
            </div>

        </div>
    </main>
</section>