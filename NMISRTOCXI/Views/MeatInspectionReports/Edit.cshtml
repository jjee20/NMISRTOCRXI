@model DomainLayer.Models.MeatInspectionReport

@{
    ViewData["Title"] = "Edit";
}

<link href="~/css/inspectorSideNav.css" rel="stylesheet" asp-append-version="true" />
<style>
    #content .FirstLayer .applications h3 {
        font-size: 25px;
        font-weight: 600;
        margin-top: 5px;
        margin-bottom: 5px;
        margin-left: 5px;
        color: var(--black);
    }
</style>


<section id="content">
    <main>

        <a asp-action="DailyInspection">Back to List</a>
        <div class="FirstLayer">
            <div class="applications">
                <h3>Verify | Meat Inspection Report</h3>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <input asp-for="RepDate" class="form-control" hidden />
                            </div>
                            <div class="form-group">
                                <select asp-for="ReceivingReportId" class="form-control" asp-items="ViewBag.ReceivingReportId" hidden></select>
                            </div>
                            <div class="form-group">
                                <select asp-for="AccountDetailsId" class="form-control" asp-items="ViewBag.AccountDetailsId" hidden></select>
                            </div>

                            <br />
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div>
    </main>
</section>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
