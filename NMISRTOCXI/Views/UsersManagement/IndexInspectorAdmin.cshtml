@using DomainLayer.Models.ViewModels
@using DomainLayer.Enum;
@model List<AccountDetailViewModel>
<link rel="stylesheet" href="~/css/users.css" asp-append-version="true" />

<style>
    .registration .table-container {
        position: relative;
        /*max-width: 1350px;*/
        width: 100%;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        margin-left: 1%;
        margin-top: 25px;
        overflow-x: auto;
    }


    #content main .head-titleUsers .left h1 {
        font-size: 50px;
        font-weight: 600;
        margin-bottom: 10px;
        margin-top: 5px;
        margin-left: 10px;
        text-align: center;
    }

    .centerbtn {
        margin-top: 25px;
        margin-left: 15px;
        width: 180px;
        background-color: var(--green7);
        border: 1px solid var(--green7);
        color: var(--white);
        padding: 5px 10px;
        border-radius: 7px;
    }

        .centerbtn:hover {
            margin-top: 25px;
            margin-left: 10px;
            width: 180px;
            background-color: var(--light-green);
            border: 1px solid var(--light-green);
            color: var(--white);
        }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>

<section id="content">
    <!-- MAIN STARTS-->
    <main class="registration">

        <div class="centerbtn">
            <a asp-area="Identity" asp-page="/Account/Register">
                <i class='bx bxs-user' style="color: var(--white);"></i>
                <span class="text1" style="color: var(--white);">Register Account</span>
            </a>
        </div>

        <div class="table-container">
            <div class="head-titleUsers">
                <div class="left">
                    <h1>USER MANAGEMENT</h1>
                    <hr />

                </div>
            </div>
            <br />
            <table id="example" class="table table-striped table-bordered table-responsive" style="width:100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Role</th>
                        <th>Meat Establishment</th>
                        <th>Email</th>
                        <th>Contact No</th>
                        <th>Address</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.lastName, @user.firstName </td>
                            <td>@user.Role</td>
                            <td>@user.MeatEstablishmentName</td>
                            <td>@user.email</td>
                            <td>@user.contactNo</td>
                            <td>@user.address</td>
                            <td class="d-flex flex-nowrap">
                                <a type="button" class="btn btn-primary py-1 font-weight-light" asp-action="Details" asp-route-id="@user.Id">View</a>
                                <a type="button" class="btn btn-warning mx-1 py-1 font-weight-light" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                <a type="button" class="btn btn-danger py-1 font-weight-light" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>


    </main>
</section>
<script src="https://code.jquery.com/jquery-3.3.1.js" defer></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" defer></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js" defer></script>

<script>
    $(document).ready(function () {
        $('#example').DataTable({
            paging: true,           // Enable pagination
            lengthChange: true,    // Enable "Show [x] entries" dropdown
            pageLength: 10,        // Set the default number of rows per page
            lengthMenu: [2, 10, 25, 50, 100], // Define the options in the "Show [x] entries" dropdown
            searching: true,       // Enable search functionality
            ordering: true,        // Enable column sorting
            responsive: true,
        });

        $('#searchInput').on('input', function () {
            var searchText = $(this).val().toLowerCase();
            $('.filter-item').each(function () {
                var rowText = $(this).text().toLowerCase();
                if (rowText.indexOf(searchText) === -1) {
                    $(this).hide();
                } else {
                    $(this).show();
                }
            });
        });
    });
</script>